{
    "name": "wordle-global",
    "version": "1.0.0",
    "description": "Daily word puzzle game in 65+ languages",
    "type": "module",
    "scripts": {
        "dev": "pnpm build && concurrently -k -n server,vite -c blue,magenta \"uv run gunicorn -c gunicorn.dev.py --chdir webapp app:app\" \"pnpm watch\"",
        "build": "vite build",
        "watch": "vite build --watch --emptyOutDir false",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:e2e": "playwright test",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:ui": "playwright test --ui",
        "format": "prettier --write \"frontend/src/**/*.{ts,js,vue}\" \"*.{js,ts,json}\"",
        "format:check": "prettier --check \"frontend/src/**/*.{ts,js,vue}\" \"*.{js,ts,json}\""
    },
    "keywords": [
        "wordle",
        "game",
        "puzzle",
        "multilingual"
    ],
    "author": "Hugo",
    "license": "MIT",
    "packageManager": "pnpm@10.17.1",
    "dependencies": {
        "@khmyznikov/pwa-install": "^0.6.2"
    },
    "devDependencies": {
        "@playwright/test": "^1.58.0",
        "@tailwindcss/vite": "^4.1.18",
        "@types/node": "^25.0.10",
        "@vitejs/plugin-vue": "^6.0.3",
        "@vitest/coverage-v8": "^4.0.18",
        "autoprefixer": "^10.4.23",
        "concurrently": "^9.2.1",
        "jsdom": "^27.4.0",
        "postcss": "^8.5.6",
        "prettier": "^3.8.1",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vitest": "^4.0.18",
        "vue": "^3.5.27",
        "vue-tsc": "^3.2.3"
    }
}
